ARG GO_VERSION=1.22

# Builder image
FROM golang:${GO_VERSION}-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./ 
RUN go mod download

COPY . .

RUN go build -o /app/api ./cmd/api

# Runner image
FROM alpine:latest

WORKDIR /app

COPY --from=builder /app/api ./

# Copy Swagger UI files
COPY --from=builder /app/docs ./docs

EXPOSE 8080

ENTRYPOINT ["./api"]
